AssignmentLayout

<AssignmentLayout>:
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: 0.2,0.2,0.2,1
        Rectangle:
            pos: self.pos
            size: self.size
    spacing: "10dp"
    Label:
        canvas.before:
            Color:
                rgba: 0,0,0.5,1
            Rectangle:
                pos: self.pos
                size: self.size
        text: "KivyLayout"
        font_size: "40dp"
        size_hint: 1,.25
        background_color: (0,0,0.75,1)
    BoxLayout:
        orientation: "horizontal"
        spacing: "10dp"
        BoxLayout:

            canvas.before:
                PushMatrix
                Rotate:
                    angle: 90
                    origin: self.center
            canvas.after:
                PopMatrix
            orientation: "vertical"
            spacing: "10dp"
            Button:
                background_color: (0.75,0,0,1)
                text: "BUTTON A"
            Button:
                background_color: (0.75,0,0,1)
                text: "BUTTON B"
        BoxLayout:
            orientation: "vertical"
            spacing: "10dp"
            Button:
                background_color: (0,0.75,0,1)
                text: "BUTTON C"
            Button:
                background_color: (0,0.75,0,1)
                text: "BUTTON D"
            Button:
                background_color: (0,0.75,0,1)
                text: "BUTTON E"
        GridLayout:
            cols: 3
            spacing: "10dp"
            Button:
                background_color: (0.75,0,0.75,1)
                text: "1"
